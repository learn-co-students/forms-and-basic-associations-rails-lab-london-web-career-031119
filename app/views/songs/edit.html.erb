<h1>Editing <%= @song.title %></h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_id %>
  <%= f.select :genre_id, @genres, {include_blank: true}%>
  <br />

  <%= f.label :note_contents %>
  <%= f.text_area :note_contents, multiple: true, id:"song_notes_1"%>
  <%= f.text_area :note_contents, multiple: true, id:"song_notes_2"%>
  <br />

  <%= f.submit "Edit Song" %>

<% end %>
