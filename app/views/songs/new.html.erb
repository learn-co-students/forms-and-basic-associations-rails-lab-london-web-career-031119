<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name, :artist %><%= f.text_field :artist_name %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>

  <fieldset>
    <legend> Notes </legend>
    <p>
      <label>Note 1</label>
      <input type="text" name="song_notes_1">
      <label>Note 2</label>
      <input type="text" name="song_notes_2">
    </p>
  </fieldset>

  <br />

  <%= f.submit %>
<% end %>
